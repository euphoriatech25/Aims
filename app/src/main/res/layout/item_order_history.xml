<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:elevation="@dimen/dp5"
    app:cardCornerRadius="@dimen/dp5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp10"
        android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="110dp"
                    android:textColor="@color/account"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Order ID" />

                <TextView
                    android:id="@+id/cart_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=": #4" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="110dp"
                    android:textColor="@color/account"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:text="Customer" />

                <TextView
                    android:id="@+id/customer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=": Sadikshya Mishra" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="110dp"
                    android:textSize="12sp"
                    android:textColor="@color/account"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:text="No. of Products" />

                <TextView
                    android:id="@+id/no_of_products"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=": 4" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="110dp"
                    android:textColor="@color/account"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:text="Status" />

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=": Pending" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="110dp"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="@color/account"
                    android:layout_height="wrap_content"
                    android:text="Total" />

                <TextView
                    android:id="@+id/total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=": $12,096.00" />
            </LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="110dp"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/account"
                    android:text="Date Added " />

                <TextView
                    android:id="@+id/product_date_added"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=": 29/06/2020" />
            </LinearLayout>

        <ImageButton
            android:id="@+id/viewOrderDetail"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:layout_gravity="end"
            android:background="@drawable/button_background_blue"
            android:padding="@dimen/dp5"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_baseline_view_eye_24" />
</RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0" />
    </LinearLayout>
</androidx.cardview.widget.CardView>