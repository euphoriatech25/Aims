<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include
        android:id="@+id/toolbar"
        layout="@layout/custom_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/billing_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp15"
                    android:drawableEnd="@drawable/ic_drop_down"
                    android:text="Billing Details "
                    android:textColor="@color/account"
                    android:textSize="@dimen/dp15"
                    android:textStyle="bold" />

                <FrameLayout
                    android:id="@+id/billingAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/delivery_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp15"
                    android:drawableEnd="@drawable/ic_drop_down"
                    android:text="Delivery Details "
                    android:textColor="@color/account"
                    android:textSize="@dimen/dp15"
                    android:textStyle="bold" />

                <FrameLayout
                    android:id="@+id/deliveryAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp15"
                    android:drawableEnd="@drawable/ic_drop_down"
                    android:text="Shipping Details"
                    android:textColor="@color/account"
                    android:textSize="@dimen/dp15"
                    android:textStyle="bold" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginLeft="@dimen/dp10"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Please select the preferred shipping method to use on this order."/>

                    <RadioButton
                     android:layout_marginLeft="@dimen/dp10"
                        android:text="Flat Shipping Rate - Rs. 5.00"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp40"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_margin="12dp"
                        android:background="@drawable/edit_box" />
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/payment_method"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp15"
                    android:drawableEnd="@drawable/ic_drop_down"
                    android:text="Payment Method "
                    android:textColor="@color/account"
                    android:textSize="@dimen/dp15"
                    android:textStyle="bold" />
                <FrameLayout
                    android:id="@+id/paymentMethod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp15"
                    android:drawableEnd="@drawable/ic_drop_down"
                    android:text="Confirm Order"
                    android:textColor="@color/account"
                    android:textSize="@dimen/dp15"
                    android:textStyle="bold" />

                <TableLayout
                     android:id="@+id/productHeading"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="vertical"/>
                <TableLayout
                    android:id="@+id/displayLinear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                </TableLayout>

                <Button
                    android:layout_width="130dp"
                    android:layout_marginEnd="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_gravity="end"
                    android:text="Confirm Order"
                    android:textColor="@color/whiteTextColor"
                    android:background="#23a1d1"
                    android:layout_height="@dimen/dp40"
                     />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
